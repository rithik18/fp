datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  role_id   String  @db.ObjectId
  joining_date String
  department Department @default(OTHER)
  mail String @unique
  created_at DateTime
  updated_at DateTime
  password String
  // @@unique([role_id, department,mail,is_active])
  certification UserCertification[]
  skills  UserSkill[]  
  role     Role    @relation(fields: [role_id], references: [id])
}
model Certification{
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  issued_by String
  is_certificate Boolean
  @@unique([name,issued_by,is_certificate])
  UserCertification UserCertification[]
}
model UserCertification{
id      String   @id @default(auto()) @map("_id") @db.ObjectId 
  userId String @db.ObjectId
  certificationId String @db.ObjectId
  started_at DateTime
  completed_at DateTime
  competency competency @default(BEGINNER)
  user   User   @relation(fields: [userId], references: [id])
  certification  Certification  @relation(fields: [certificationId], references: [id])
  @@unique([userId, certificationId])

}
model Skill {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String   @unique
  created_at DateTime
  updated_at DateTime
  desc String
  User UserSkill[] 

  RoleSkill RoleSkill[]
}
model UserSkill {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId 
  userId String @db.ObjectId
  skillId String @db.ObjectId
  user   User   @relation(fields: [userId], references: [id])
  skill  Skill  @relation(fields: [skillId], references: [id])
  @@unique([userId, skillId])
}
model RoleSkill {
  id      String   @id @default(auto()) @map("_id") @db.ObjectId 
  RoleId String @db.ObjectId
  skillId String @db.ObjectId
  role   Role   @relation(fields: [RoleId], references: [id])
  skill  Skill  @relation(fields: [skillId], references: [id])
  @@unique([RoleId, skillId])
}
model Role {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  name        String     @unique
  desc        String
  created_at DateTime
  updated_at DateTime
  User User[]

  RoleSkill RoleSkill[]
}
enum Department {
  ADMIN
  FULL_STACK
  DATA_ANALYTICS
  DATA_ENGINEERING
  DEVOPS
  OTHER
}
